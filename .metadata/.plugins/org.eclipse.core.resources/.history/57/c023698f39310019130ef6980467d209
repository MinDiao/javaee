package com.jdm.jdmshop.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.jdm.jdmshop.pojo.Item;
import com.jdm.jdmshop.service.ItemService;
import com.jdm.jdmshop.utils.R;

/**
 * 
 * @ClassName:  ItemController   
 * @Description: 商品控制器 
 * @author: LiuJinrong
 * @date:   2019年2月10日 下午5:33:29
 */
@Controller
@RequestMapping("item")
public class ItemController {
	
	/**
	 * 注入Service
	 */
	@Autowired
	private ItemService itemService;
	
	
	/**
	 * 
	 * @Description: 查询商品
	 * @author: LiuJinrong
	 * @date:   2019年2月10日 下午5:36:36    
	 * @param item
	 * @return
	 */
	@RequestMapping("select")
	@ResponseBody
	public R select(Item item){
		// 填充商品对象的List集合
		List<Item> items = null;
		
		try {
			// 执行Service层查询商品信息方法
			items = itemService.Select(item);
			
		} catch (Exception e) {
			// 抛出异常
			e.printStackTrace();
			// 异常响应至页面
			return R.error("服务器发生未知异常,请联系管理员");
		}
		
		// 判断是否查询成功
		if (items != null) {
			// 将查询的商品信息响应至页面
			return R.ok().put("items", items);
			
		} else {
			return R.error("查询的商品不存在");
		}
	}
	
	
	
	/**
	 * 
	 * @Description: 根据多个商品id查询多个商品
	 * @author: LiuJinrong
	 * @date:   2019年2月15日 下午11:08:50    
	 * @param items
	 * @return
	 */
	@RequestMapping("selects")
	@ResponseBody
	public R selects(String[] itemId) {
		// 填充商品列表集合
		List<Item> itemList = null;
		
		try {
			// 调用根据多个id查询商品方法
			itemList = itemService.selects(itemId);
			
		} catch (Exception e) {
			e.printStackTrace();
			// 异常响应至页面
			return R.error("服务器发生未知异常,请联系管理员");
		}
		
		// 判断是否成功
		if (itemList != null) {
			// 将查询出的多个商品响应至页面
			return R.ok().put("itemList", itemList);
			
		} else {
			return R.error("查询的商品不存在");
		}
	}
	
	
	

}







